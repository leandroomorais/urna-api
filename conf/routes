# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET		/										UrnaEletronica.main
POST	/insert									UrnaEletronica.enviarVoto
GET 	/getTerminal							UrnaEletronica.getTerminal
POST 	/api/setTerminal						UrnaEletronica.setTerminal
POST	/api/finalizarVotacao					UrnaEletronica.finalizarVotacao
POST 	/api/cancelharVotacao					UrnaEletronica.cancelharVotacao
GET		/api/emitirBoletim						UrnaEletronica.emitirBoletim
POST	/api/enviarSecao						UrnaEletronica.enviarSecao
GET		/getCancelarVotacao						UrnaEletronica.getCancelarVotacao
GET		/getFinalizadaVotacao					UrnaEletronica.getFinalizadaVotacao

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
