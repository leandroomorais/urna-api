# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET		/										UrnaEletronica.index
POST	/voto									UrnaEletronica.enviarVoto
GET 	/get-terminal							UrnaEletronica.getTerminal
POST 	/api/setTerminal						UrnaEletronica.setTerminal
POST	/api/finalizarVotacao					UrnaEletronica.finalizarVotacao
POST 	/api/cancelarVotacao					UrnaEletronica.cancelharVotacao
GET		/api/emitirBoletim						UrnaEletronica.emitirBoletim
POST	/api/enviarSecao						UrnaEletronica.enviarSecao
GET		/cancela-votacao						UrnaEletronica.getCancelarVotacao
GET		/votacao-finalizada					    UrnaEletronica.getFinalizadaVotacao

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
